<view class="map-box">
  <map id="myMap" longitude="{{longitude}}" latitude="{{latitude}}" scale="{{scale}}" 
  show-location="true" markers="{{markers}}" bindmarkertap="toDirive" polyline="{{polyline}}">
  <!-- 中心坐标 -->
  <cover-image  src="../../images/point_in_map.png" class="map-icon_point"></cover-image>
  
  <!-- icon -->
  <cover-image  src="../../images/reset.png" class="map-icon map-icon_reset" bindtap="toCurrentLocation" ></cover-image>
  


  </map>
</view>