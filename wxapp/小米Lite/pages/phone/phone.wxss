/* pages/phone/phone.wxss */
.container {
  height: 100%;
  width: 100%;
  background: #e6e8fa;
}
.container .img {
  width: 100%;
  height: 200px;
}
.slide-image {
  width: 100%;
  height: 200px;
}
.container .text1 {
  font-size: 18px;
  margin: 10px auto 10px auto;
  color: #664ace;
  width: 140px;
  height: 30px;
  text-align: center;
}
.big {
  height: 300px;
  width: 366px;
  background: #ffffff;
  margin: 0 auto;
  position: relative;
}
.big .big_img{
  width: 220px;
  height: 220px;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 0);
}
.big .big1 {
  background: #f5f5f5;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 80px;
}
.big1 .big2 {
  margin-left: 10px;
  width: 195px;
  height: 35px;
  margin-top: 23px;
  float: left;
}
.big2 .big_name {
  color: #363636;
  display: block;
  font-size: 15px;
}
.big2 .big_desc {
  color: #989898;
  display: block;
  font-size: 13px;
}
.big1 .big3 {
  float: left;
  margin-left: 37px;
  margin-top: 5px;
}
.big3 .big_newPrice {
  color: #e65a60;
  font-size: 15px;
}
.big3 .big_oldPrice {
  font-size: 10px;
  color: #989898;
  text-decoration: line-through;
}
.big3 .big_buy {
  color: #ffffff;
  background: #e65a60;
  width: 110px;
  height: 30px;
  font-size: 15px;
  border-radius: 5px;
  line-height: 30px;
  text-align: center;

}
.little {
  margin-top: 4px;
  height: 300px;
  width: 181px;
  margin-left: 2px;
  display: flex;
}
.little .little_img {
  width: 135px;
  height: 135px;
}