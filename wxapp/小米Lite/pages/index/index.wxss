/**index.wxss**/
view .header {
  height: 70rpx;
  background-color: #fe6900;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #a3a3a3;
  font-size: 14px;
}
.header .search {
  border-radius: 10px;
  width: 1040px;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  margin: 10rpx;
}
.slide-image {
  width: 100%;
}
.channels {
  width: 100%;
  height: 130px;
  background: #ffffff;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center; 
  border-bottom: 1px solid #a3a3a3;
  margin-top: 10px;
}
.channels .nav {
  width: 70px;
  height: 50px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.nav .channel-image {
  width: 34px;
  height: 34px;
}
.nav .channel-name {
  font-size: 12px;
}